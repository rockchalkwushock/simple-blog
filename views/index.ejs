<% include partials/header %>

  <h1>INDEX PAGE</h1>

  <% posts.forEach(post => { %>
    <div>
      <h2>
        <%= post.title %>
      </h2>
      <img src="<%= post.image %>" alt="<%= post.title %>">
      <p>
        <%= post.content.substring(0, 80) %>
      </p>
      <a href="/posts/<%= post._id %>">Read More</a>
    </div>
    <% }) %>
      <% include partials/footer %>
